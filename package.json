{
  "name": "clippy",
  "productName": "Clippy",
  "version": "1.0.0",
  "description": "A clipboard history manager for macOS",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "package": "electron-packager . Clippy --platform=darwin --arch=x64 --out=dist --icon=assets/icon.icns --overwrite",
    "create-archive": "git archive --format=tar.gz --prefix=clippy-${npm_package_version}/ -o clippy-${npm_package_version}.tar.gz v${npm_package_version}",
    "generate-hash": "./scripts/generate-hash.sh",
    "prepare-release": "npm run create-archive && npm run generate-hash",
    "update-version": "./scripts/update-version.sh",
    "release": "./scripts/release.sh"
  },
  "author": "Mohit Gupta <https://github.com/mohitgupta07>",
  "license": "MIT",
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "electron": "^24.0.0",
    "electron-packager": "^17.1.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mohitgupta07/clippy.git"
  },
  "keywords": [
    "clipboard",
    "history",
    "electron",
    "utility",
    "productivity"
  ]
} 